# =============================================================================
# API Keys for LLM providers
# You need at least one of these for AI features to work
# =============================================================================

# OpenAI API Key (required if Azure is not configured)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (optional - for Claude integration)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# Azure AI Agent Configuration (optional - enables agentic architecture)
# When configured, the system will use Azure AI Agents for:
# - Client simulation
# - Profile generation
# - Performance evaluation
# - Expert guidance
# Falls back to OpenAI if Azure is not available
# =============================================================================

# Azure AI Project endpoint (required for Azure agents)
# Format: https://<project-name>.services.ai.azure.com/api/projects/<project-id>
AZURE_AI_PROJECT_ENDPOINT=

# Model deployment name in Azure (defaults to gpt-4o)
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4o

# Prefix for agent names (defaults to rplay-)
AZURE_AI_AGENT_NAME_PREFIX=rplay-

# =============================================================================
# Azure Authentication
#
# NOTE: AIProjectClient only supports Azure AD (Entra ID) authentication.
# API Key authentication is NOT supported by the Azure AI Projects SDK.
# See: https://github.com/Azure/azure-sdk-for-js/issues/34675
#
# Use one of these methods:
# - Azure CLI: run 'az login' for local development
# - Managed Identity: automatic when running in Azure
# - Service Principal: set AZURE_CLIENT_ID, AZURE_CLIENT_SECRET, AZURE_TENANT_ID
# =============================================================================

# Azure AI API Key (NOT CURRENTLY SUPPORTED - kept for future SDK updates)
# If set, a warning will be logged and DefaultAzureCredential will be used instead.
# AZURE_AI_API_KEY=your-azure-ai-api-key-here

# For Service Principal authentication (optional, used by DefaultAzureCredential)
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
# AZURE_TENANT_ID=your-tenant-id

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection string (required)
DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# Application Settings
# =============================================================================

ENVIRONMENT=development
PORT=3001

# Frontend URL for CORS
APP_URL=http://localhost:3000

# Log level (debug, info, warning, error)
LOG_LEVEL=info

# =============================================================================
# Email Configuration (optional)
# =============================================================================

# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=user@example.com
# EMAIL_PASSWORD=password
# EMAIL_FROM=noreply@example.com

# =============================================================================
# Feature Flags
# =============================================================================

# Enable email notifications
# ENABLE_EMAIL_NOTIFICATIONS=false

# Enable engagement tracking (default: true)
# ENABLE_ENGAGEMENT_TRACKING=true

# Enable AI evaluation (default: true)
# ENABLE_AI_EVALUATION=true
